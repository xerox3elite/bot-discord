# Arsenal Bot - Configuration Oracle Cloud Production
# Copier vers .env sur le serveur et compléter les valeurs

# ================================
# TOKENS BOT DISCORD
# ================================
DISCORD_TOKEN=your_bot_token_here
CLIENT_ID=your_client_id_here
GUILD_ID=your_guild_id_here

# ================================
# CONFIGURATION BASE DE DONNÉES
# ================================
DB_PATH=./arsenal_v4.db
HUNT_ROYAL_DB=./hunt_royal.db
ECONOMY_DB=./arsenal_economy.db
LEVELS_DB=./arsenal_levels.db

# ================================
# CONFIGURATION ORACLE CLOUD
# ================================
ENV=production
DEBUG=false
LOG_LEVEL=INFO
MAX_LOG_SIZE=50MB

# ================================
# SÉCURITÉ
# ================================
CREATOR_ID=your_creator_discord_id
ADMIN_ROLE_ID=your_admin_role_id

# ================================
# FONCTIONNALITÉS
# ================================
ENABLE_AUTOMOD=true
ENABLE_ECONOMY=true
ENABLE_LEVELS=true
ENABLE_HUNT_ROYAL=true

# ================================
# MONITORING
# ================================
ENABLE_MONITORING=true
WEBHOOK_ERRORS=your_webhook_url_for_errors
WEBHOOK_LOGS=your_webhook_url_for_logs

# ================================
# PERFORMANCE
# ================================
MAX_CONCURRENT_TASKS=100
CACHE_SIZE=1000
COMMAND_COOLDOWN=2

# ================================
# BACKUP
# ================================
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d
BACKUP_PATH=./backups/
